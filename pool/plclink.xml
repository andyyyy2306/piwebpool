	<title>piweb</title>
	<rooms> 
		<room id="0"> 
			<title>Piscine</title>
			<refresh>2000</refresh>
			<items> 
				<item id="0"> 
					<title>Temperature</title>
					<name>Temperature</name>
					<description>Eau à </description>
                    <type>json</type><text>state</text> 
                    <unit>°C</unit>
					<affichage>text</affichage>
					<url>http://piweb3.infrafast.com/action.php?action=getTemperature</url>
				</item>
				<item id="1"> 
					<title>ORP</title>
					<name>ORP</name>
					<description>Desinfectant (600-750) </description>
                    <type>json</type><text>state</text> 
                    <unit>mV</unit>
					<affichage>text</affichage>
					<url>http://piweb3.infrafast.com/action.php?action=getORP</url>
				</item>
				<item id="2"> 
					<title>PH</title>
					<name>PH</name>
					<description>Taux Ph (6.5-7.5) </description>
                    <type>json</type><text>state</text> 
					<affichage>text</affichage>
					<url>http://piweb3.infrafast.com/action.php?action=getPh</url>
				</item>					
				<item id="3"> 
					<title>Pompe</title>
					<name>Pompe</name>
					<description>Etat filtration</description>
                    <type>json</type>
                    <text>state</text>
                    <affichage>switch</affichage>
                    <url>http://piweb3.infrafast.com/action.php?getState=filtration</url>
                    <link>http://piweb3.infrafast.com/action.php?filtration=%d</link>                    
				</item>
				<item id="4"> 
					<title>Traitement</title>
					<name>Traitement</name>
					<description>Etat traitement</description>
                    <type>json</type>
                    <text>state</text>
                    <affichage>switch</affichage>
                    <url>http://piweb3.infrafast.com/action.php?getState=traitement1</url>
                    <link>http://piweb3.infrafast.com/action.php?traitement1=%d</link>
				</item>				
			</items>
		</room>
	</rooms>
